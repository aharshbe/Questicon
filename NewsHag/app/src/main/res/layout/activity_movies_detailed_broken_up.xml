<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="badassapps.aaron.newshag.NavDDetailView"
    android:id="@+id/relativebackground"
    android:background="#12eb5c5b"
    android:shadowColor="#000000"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="1.5">


    <TextView
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:text="@string/exampletit"
        android:textColor="#000000"
        android:background="#35F0FFFF"
        android:textSize="25sp"
        android:id="@+id/title"
        android:scrollbars="vertical"
        android:maxLines="4"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:textColor="#000000"
        android:background="#35F0FFFF"
        android:text="fsdfhjsd sdf sdf sd f sdf sdf sdfs df sdf sdf dsf sdf sd fs df"
        android:id="@+id/body"
        android:textStyle="italic"
        android:scrollbars="vertical"
        android:maxLines="5"
        android:textSize="20sp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/image"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Continue reading"
        android:background="#35F0FFFF"
        android:textColor="#000000"
        android:id="@+id/button"
        android:onClick="clickingReadOnBook"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:background="@drawable/loading"
        android:shadowDy="1"
        android:shadowRadius="3.5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
